{
  "name": "crsf",
  "description": "Crossfire protocol implementation in TypeScript/JavaScript",
  "version": "0.0.2",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "types": "./dist/esm/types/index.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "prepublishOnly": "npm run build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "vitest --no-watch"
  },
  "keywords": [
    "crossfire",
    "crsf",
    "protocol",
    "radio",
    "rc",
    "drone"
  ],
  "author": {
    "name": "Serhii Mamedov",
    "email": "bboyvivus@gmail.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:repugraf/crsf-js.git"
  },
  "homepage": "https://github.com/repugraf/crsf-js",
  "devDependencies": {
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "25.2.0",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "prettier": "3.8.1",
    "rollup": "4.57.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "publishConfig": {
    "access": "public"
  }
}
